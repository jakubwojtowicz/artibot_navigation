<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.0305" rpy="0 0 0" />
        </visual>
    </link>

    <link name="chasis_back">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <box size="0.18 0.18 0.09" />
        </geometry>
        <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.18 0.18 0.09" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="1" />
            <inertia ixx="0.16666666666666666" ixy="0" ixz="0" iyy="0.16666666666666666" iyz="0" izz="0.16666666666666666" />
        </inertial>
    </link>

    <joint name="base_link_to_chasis_back" type="fixed">
        <parent link="base_link" />
        <child link="chasis_back" />
        <origin xyz="0.03 0 0.045" rpy="0 0 0" />
    </joint>

    <link name="left_wheel_back">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.0305" length="0.025" />
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="chasis_back_to_left_wheel_back" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_back" />
        <origin xyz="0 0.08 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel_back">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.0305" length="0.025" />
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="chasis_back_to_right_wheel_back" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_back" />
        <origin xyz="0 -0.08 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>
    

</robot>