<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Base Link (Reference Frame) -->
    <link name="base_link">
        <!-- No geometry or visual as it serves as a reference frame -->
    </link>

    <!-- Back Body Link -->
    <link name="back_body">
        <visual>
            <geometry>
                <box size="0.18 0.18 0.09"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <!-- Joint between base_link and back_body -->
    <joint name="back_body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_body"/>
        <origin xyz="0 0 0.045" rpy="0 0 0"/>
    </joint>

    <!-- Front Body Link -->
    <link name="front_body">
        <visual>
            <geometry>
                <box size="0.18 0.18 0.09"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
    </link>

    <!-- Center Joint (between front and back sections) -->
    <joint name="center_joint" type="revolute">
        <parent link="back_body"/>
        <child link="front_body"/>
        <origin xyz="0 0 0.045" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.5708" upper="1.5708" effort="10" velocity="1"/>
    </joint>

    <!-- Front Left Wheel Link and Joint -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0305" length="0.025"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    <joint name="front_left_wheel_joint" type="revolute">
        <parent link="front_body"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.09 0.09 0" rpy="0 1.5708 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="0" effort="5" velocity="10"/>
    </joint>

    <!-- Front Right Wheel Link and Joint -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0305" length="0.025"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    <joint name="front_right_wheel_joint" type="revolute">
        <parent link="front_body"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.09 -0.09 0" rpy="0 1.5708 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="0" effort="5" velocity="10"/>
    </joint>

    <!-- Back Left Wheel Link and Joint -->
    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0305" length="0.025"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    <joint name="back_left_wheel_joint" type="revolute">
        <parent link="back_body"/>
        <child link="back_left_wheel"/>
        <origin xyz="-0.09 0.09 0" rpy="0 1.5708 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="0" effort="5" velocity="10"/>
    </joint>

    <!-- Back Right Wheel Link and Joint -->
    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0305" length="0.025"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    <joint name="back_right_wheel_joint" type="revolute">
        <parent link="back_body"/>
        <child link="back_right_wheel"/>
        <origin xyz="-0.09 -0.09 0" rpy="0 1.5708 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="0" effort="5" velocity="10"/>
    </joint>
</robot>
